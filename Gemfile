source 'https://rubygems.org'

# Lock rails to version 3.2.8
  gem 'rails', '3.2.8'

# Load JQuery for UJS
  gem 'jquery-rails'
  
# To use ActiveModel has_secure_password
  gem 'bcrypt-ruby', '~> 3.0.0'

# Use SQLite3 to store data during development
  gem 'sqlite3'

# Only load these gems in the development environment
group :development do
  # Adds list of attributes and their types to models
  gem 'annotate'
end


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end